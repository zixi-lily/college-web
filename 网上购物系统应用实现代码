43.页面顶部设计：
<?php
   session_start();
   include("conn/conn.php");
?>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=gb2312">
<title>校园交易平台网</title>
<link rel="stylesheet" type="text/css" href="css/font.css">
<script language="javascript" type="text/javascript">
  nowNum=1;
	maxNum=4;
	window.onload=function(){
	show();
	showTime();
	}  
	function show(){	
		for(var i=1;i<=maxNum;i++)
		document.getElementById("div"+i).style.display =(i==nowNum)?'block':'none';
		
		if(nowNum == maxNum){   
   		 	nowNum = 1;
    	}
  			else{
	 		 nowNum++;
	  }
			theTimer = setTimeout('show()', 1500);
	}
	nowNum=1;
	maxNum=4;
	window.onload=function(){
	show();
	showTime();
	}  
	function showTime(){
		var Digital	=new Date()
		var year=Digital.getFullYear()
		var month=Digital.getMonth()+1
		var day=Digital.getDate()
		var hours=Digital.getHours()
		var minutes=Digital.getMinutes()
		var seconds=Digital.getSeconds()
		var s=year+"年"+month+"月"+day+"日"+hours+"时"+minutes+"分"+seconds+"秒"
		sT.innerHTML=s
		setTimeout("showTime()",1000)
	}
</script>
</head>
<body>
<table width="766" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr bgcolor="#F1B000">
    <td colspan="3" valign="bottom"><table width="766" border="0" align="center" cellpadding="0" cellspacing="0">
      <tr>
        <td width="256" height="83" background="images/logo2.png" >&nbsp;</td>
        <td></td>
