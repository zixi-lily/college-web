        <td height="25" bgcolor="#FFFFFF"><div align="center"><?php echo $info1[linkurl];?></div></td>
        <td height="25" bgcolor="#FFFFFF"><div align="center"><a href="changelink.php?id=<?php echo $info1[id];?>">更改</a></div></td>
      </tr>
	 <?php
	    }
        
      ?>
	 
    </table></td>
  </tr>
</table>
